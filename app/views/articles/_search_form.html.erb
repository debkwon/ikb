<div class="container">
  <h2>More search options:</h2><br />
  <%= form_tag(full_search_results_path, method: :get) do %>
    <%= label_tag :category, "Show me matches only from:" %>
    <%= select_tag "category_ids", options_from_collection_for_select(@categories, "id", "name"), {:include_blank => "Select a Category..."} %><br />
    <%= label_tag("Filter Drafts:") %>
    <%= select_tag "draft_status", "<option value='1'>Exclude all drafts</option><option value='2'>Show ONLY drafts</option>".html_safe, {:include_blank => "Select a Draft option"}%>  <br />
    <%= text_field_tag :search, params[:search], placeholder: "Search articles..." %><br />
    <%= submit_tag "Submit", class: "btn btn-primary btn-sm"%>
  <% end %>
</div>