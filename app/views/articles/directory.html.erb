<div class= "container">
	<div class="row">	
		<div class="col-md-9">
			<h3>Internal Knowledge Base</h3>

			<% @categories.each do |category| %>
			  	<h4><%=category.name%></h4>
			     <% category.topics.each do |topic| %>
						<h5 class="list-indent"><%=topic.name%></h5>
					<ul>
				  		<%topic.articles.each do |article| %>
				  			<li class="list-indent">
								<% if article.is_draft %>
							   		<%= link_to article_path(article) do%>
							   			<%= article.title%> <span class="glyphicon glyphicon-pencil"></span>
							  		<% end %>
						    	<% else %>
						    		<%= link_to article.title, article_path(article) %>
						    	<% end %>
					    	</li>
				    </ul>
						<% end %>
			    <% end %>
			    <br>	
			<% end %>	
		</div>
		<div class="col-md-3 pull-right">

		<%=	.results
		  - @search.each_hit_with_result do |hit, post|
		    .result
		      %h2= h post.title
		      %h6== (#{h hit.score})
		      %p= h truncate(post.body, :length => 100)
		.pagination
		  = will_paginate(@search.results)
		%>
		
		</div>
	</div>
</div>
