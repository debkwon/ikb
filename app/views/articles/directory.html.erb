<div class= "container">
	<div class="row">	
		<div class="col-md-9">
			<h3>Internal Knowledge Base</h3>
			<% @categories.each do |category| %>
			  	<h4><%=category.name%></h4>
			     <% category.topics.each do |topic| %>
			     	<ul>
						<li><i><%=topic.name%></i></li>
					</ul>
					<ul>
				  		<%topic.articles.each do |article| %>
				  			<li>
									<% if article.is_draft %>
							   		<%= link_to article_path(article) do%>
							   			<%= article.title%> <span class="glyphicon glyphicon-pencil"></span>
							  		<% end %>
						    	<% else %>
						    		<%= link_to article.title, article_path(article) %>
						    	<% end %>
					    	</li>
				    </ul>
						<% end %>
			    <% end %>	
			<% end %>	
		</div>
		<div class="col-md-3 pull-right">
			<% if @articles.present? && params[:search].present? %>
				<%= render partial: 'shared/search' %>
			<% if params[:search].nil? %>
  			<%= flash[:warning] = "There were no articles matching the terms '#{params[:search]}'" %>
			<% end %>
			<% end %>
		</div>
	</div>
</div>
