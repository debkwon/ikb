<h1>Create a new article</h1>

	<%= form_for @article do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>

		<%= f.label :content %>
		<%= f.bootsy_area :content, class: 'form-control', size: '60x12' %>

		<%= f.submit "Publish", class: 'btn btn-primary' %>

	<% end %>


