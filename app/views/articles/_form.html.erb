
<%= form_for @article do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :topic, "Category/Topic", class: 'form-control'%>
	<%= f.grouped_collection_select(:topic_id, Category.all, :topics, :name, :id, :name, include_blank: "Select A Topic...", class: 'form-control')%> 

	<br />
	
	<%= f.label :title, class: 'form-control'%>
	<%= f.text_field :title, class: 'form-control' %>

	<%= f.label :content %>
	<%= f.bootsy_area :content, class: 'form-control', size: '60x12' %>

	
	<br />

	<%= f.check_box (:is_draft)%> <%= f.label (:is_draft) , "Draft?" %> 

	<br />
	<br />

	<%= f.submit "Publish", class: 'btn btn-primary' %> 

<% end %>
